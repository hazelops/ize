{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "type": "object",
    "properties": {
        "aws_profile": {
            "type": "string",
            "description": "AWS profile"
        },
        "aws_region": {
            "type": "string",
            "description": "AWS region"
        },
        "config_file": {
            "type": "string",
            "description": "path to config file"
        },
        "env": {
            "type": "string",
            "description": "environment"
        },
        "env_dir": {
            "type": "string",
            "description": "environment directory"
        },
        "home": {
            "type": "string",
            "description": "user home directory"
        },
        "infra_dir": {
            "type": "string",
            "description": "infrastructure directory"
        },
        "log_level": {
            "type": "string",
            "description": "log level"
        },
        "namespace": {
            "type": "string",
            "description": "namespace"
        },
        "plain_text": {
            "anyOf": [
                {
                    "type": "string"
                },
                {
                    "type": "boolean"
                }
            ],
            "description": "plain text"
        },
        "prefer_runtime": {
            "type": "string",
            "description": "prefer runtime"
        },
        "apps_path": {
            "type": "string",
            "description": "path to apps directory"
        },
        "root_dir": {
            "type": "string",
            "description": "project directory"
        },
        "terraform_version": {
            "type": "string",
            "description": "terraform version"
        },
        "docker_registry": {
            "type": "string",
            "description": "docker registry"
        },
        "tf_log_path": {
            "type": "string",
            "description": "path to terraform log"
        },
        "tag": {
            "type": "string",
            "description": "tag"
        },
        "tf_log": {
            "type": "string",
            "description": "terraform log"
        },
        "custom_prompt": {
            "anyOf": [
                {
                    "type": "string"
                },
                {
                    "type": "boolean"
                }
            ],
            "description": "custom prompt for apps"
        },
        "tunnel": {
            "type": "object",
            "properties": {
                "bastion_instance_id": {
                    "type": "string"
                },
                "forward_host": {
                    "type": "array",
                    "items": {
                        "type": "string"
                    }
                }
            },
            "description": "tunnel configuration",
            "additionalProperties": false
        },
        "app": {
            "id": "#/properties/app",
            "type": "object",
            "patternProperties": {
                "^[a-zA-Z0-9._-]+$": {
                    "$ref": "#/definitions/app"
                }
            },
            "description": "apps configuration",
            "additionalProperties": false
        },
        "ecs": {
            "id": "#/properties/ecs",
            "type": "object",
            "patternProperties": {
                "^[a-zA-Z0-9._-]+$": {
                    "$ref": "#/definitions/ecs"
                }
            },
            "description": "ecs apps configuration",
            "additionalProperties": false
        },
        "serverless": {
            "id": "#/properties/serverless",
            "type": "object",
            "patternProperties": {
                "^[a-zA-Z0-9._-]+$": {
                    "$ref": "#/definitions/serverless"
                }
            },
            "description": "serverless apps configuration",
            "additionalProperties": false
        },
        "terraform": {
            "id": "#/properties/terraform",
            "type": "object",
            "patternProperties": {
                "^[a-zA-Z0-9._-]+$": {
                    "$ref": "#/definitions/terraform"
                }
            },
            "description": "terraform configuration",
            "additionalProperties": false
        },
        "infra": {
            "type": "object",
            "properties": {
                "terraform": {
                    "type": "object",
                    "properties": {
                        "version": {
                            "type": "string"
                        },
                        "state_bucket_region": {
                            "type": "string"
                        },
                        "state_bucket_name": {
                            "type": "string"
                        },
                        "root_domain_name": {
                            "type": "string"
                        },
                        "aws_region": {
                            "type": "string"
                        },
                        "aws_profile": {
                            "type": "string"
                        }
                    },
                    "description": "infrastructure configuration",
                    "additionalProperties": false
                },
                "tunnel": {
                    "type": "object",
                    "properties": {
                        "bastion_instance_id": {
                            "type": "string"
                        },
                        "forward_host": {
                            "type": "array",
                            "items": {
                                "type": "string"
                            }
                        }
                    },
                    "description": "tunnel configuration",
                    "additionalProperties": false
                }
            },
            "required": [
                "terraform"
            ],
            "description": "infrastructure configuration"
        }
    },
    "definitions": {
        "app": {
            "id": "#/definitions/app",
            "type": "object",
            "properties": {
                "type": {
                    "type": "string",
                    "description": "app type"
                },
                "file": {
                    "type": "string",
                    "description": "path to serverless file"
                },
                "node_version": {
                    "type": "string",
                    "description": "node version"
                },
                "create_domain" : {
                    "type": "boolean",
                    "description": "create domain"
                },
                "path"   : {
                    "type": "string",
                    "description": "path to app directory"
                },
                "sls_node_module_cache_mount"   : {
                    "type": "string",
                    "description": "sls node module cache mount"
                },
                "env"  : {
                    "type": "array",
                    "items": {
                        "type": "string",
                        "description": "environment"
                    },
                    "description": "environments"
                },
                "unsafe": {
                    "type": "boolean",
                    "description": "unsafe mode (fast deploy)"
                },
                "image" : {
                    "type": "string",
                    "description": "docker image"
                },
                "cluster"   : {
                    "type": "string",
                    "description": "ECS cluster"
                },
                "task_definition_revision"   : {
                    "type": "string",
                    "description": "task definition revision"
                },
                "timeout"  : {
                    "type": "string",
                    "description": "timeout"
                },
                "docker_registry"  : {
                    "type": "string",
                    "description": "docker registry"
                }
            },
            "description": "app configuration",
            "additionalProperties": false
        },
        "ecs": {
            "id": "#/definitions/ecs",
            "type": "object",
            "properties": {
                "path": {
                    "type": "string",
                    "description": "path to ecs app folder"
                },
                "unsafe": {
                    "type": "boolean",
                    "description": "unsafe mode (fast deploy)"
                },
                "image" : {
                    "type": "string",
                    "description": "docker image"
                },
                "cluster"   : {
                    "type": "string",
                    "description": "ECS cluster"
                },
                "task_definition_revision" : {
                    "type": "string",
                    "description": "task definition revision"
                },
                "timeout" : {
                    "type": "string",
                    "description": "timeout"
                },
                "docker_registry"  : {
                    "type": "string",
                    "description": "docker registry"
                }
            },
            "description": "ecs app configuration",
            "additionalProperties": false
        },
        "serverless": {
            "id": "#/definitions/serverless",
            "type": "object",
            "properties": {
                "file": {
                    "type": "string",
                    "description": "path to serverless file"
                },
                "node_version": {
                    "type": "string",
                    "description": "node version"
                },
                "create_domain" : {
                    "type": "boolean",
                    "description": "create domain"
                },
                "path"   : {
                    "type": "string",
                    "description": "path to serverless app folder"
                },
                "sls_node_module_cache_mount"   : {
                    "type": "string",
                    "description": "sls node module cache mount"
                },
                "env"  : {
                    "type": "array",
                    "items": {
                        "type": "string",
                        "description": "environment"
                    },
                    "description": "environments"
                }
            },
            "description": "serverless app configuration",
            "additionalProperties": false
        },
        "terraform": {
            "id": "#/definitions/terraform",
            "type": "object",
            "properties": {
                "version": {
                    "type": "string",
                    "description": "terraform version"
                },
                "state_bucket_region": {
                    "type": "string",
                    "description": "terraform state bucket region"
                },
                "state_bucket_name" : {
                    "type": "string",
                    "description": "terraform state bucket name"
                },
                "root_domain_name"   : {
                    "type": "string",
                    "description": "root domain name"
                },
                "aws_region"   : {
                    "type": "string",
                    "description": "AWS region"
                },
                "aws_profile"  : {
                    "type": "string",
                    "description": "AWS profile"
                }
            },
            "description": "terraform configuration",
            "additionalProperties": false
        }
    },
    "required": [
        "env",
        "aws_profile",
        "aws_region",
        "namespace",
        "env_dir",
        "home",
        "infra_dir",
        "prefer_runtime",
        "root_dir"
    ],
    "additionalProperties": false
}