{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "type": "object",
    "properties": {
        "aws_profile": {
            "type": "string"
        },
        "aws_region": {
            "type": "string"
        },
        "config_file": {
            "type": "string"
        },
        "env": {
            "type": "string"
        },
        "env_dir": {
            "type": "string"
        },
        "home": {
            "type": "string"
        },
        "infra_dir": {
            "type": "string"
        },
        "log_level": {
            "type": "string"
        },
        "namespace": {
            "type": "string"
        },
        "plain_text": {
            "type": "boolean"
        },
        "prefer_runtime": {
            "type": "string"
        },
        "apps_path": {
            "type": "string"
        },
        "root_dir": {
            "type": "string"
        },
        "terraform_version": {
            "type": "string"
        },
        "docker_registry": {
            "type": "string"
        },
        "tf_log_path": {
            "type": "string"
        },
        "tag": {
            "type": "string"
        },
        "tf_log": {
            "type": "string"
        },
        "app": {
            "id": "#/properties/app",
            "type": "object",
            "patternProperties": {
                "^[a-zA-Z0-9._-]+$": {
                    "$ref": "#/definitions/app"
                }
            },
            "additionalProperties": false
        },
        "ecs": {
            "id": "#/properties/ecs",
            "type": "object",
            "patternProperties": {
                "^[a-zA-Z0-9._-]+$": {
                    "$ref": "#/definitions/ecs"
                }
            },
            "additionalProperties": false
        },
        "serverless": {
            "id": "#/properties/serverless",
            "type": "object",
            "patternProperties": {
                "^[a-zA-Z0-9._-]+$": {
                    "$ref": "#/definitions/serverless"
                }
            },
            "additionalProperties": false
        },
        "terraform": {
            "id": "#/properties/terraform",
            "type": "object",
            "patternProperties": {
                "^[a-zA-Z0-9._-]+$": {
                    "$ref": "#/definitions/terraform"
                }
            },
            "additionalProperties": false
        },
        "infra": {
            "type": "object",
            "properties": {
                "terraform": {
                    "type": "object",
                    "properties": {
                        "version": {
                            "type": "string"
                        },
                        "state_bucket_region": {
                            "type": "string"
                        },
                        "state_bucket_name": {
                            "type": "string"
                        },
                        "root_domain_name": {
                            "type": "string"
                        },
                        "aws_region": {
                            "type": "string"
                        },
                        "aws_profile": {
                            "type": "string"
                        }
                    },
                    "additionalProperties": false
                },
                "tunnel": {
                    "type": "object",
                    "properties": {
                        "bastion_instance_id": {
                            "type": "string"
                        },
                        "forward_host": {
                            "type": "array",
                            "items": {
                                "type": "string"
                            }
                        }
                    },
                    "additionalProperties": false
                }
            },
            "required": [
                "terraform"
            ]
        }
    },
    "definitions": {
        "app": {
            "id": "#/definitions/app",
            "type": "object",
            "properties": {
                "type": {
                    "type": "string"
                },
                "file": {
                    "type": "string"
                },
                "node_version": {
                    "type": "string"
                },
                "create_domain" : {
                    "type": "boolean"
                },
                "path"   : {
                    "type": "string"
                },
                "sls_node_module_cache_mount"   : {
                    "type": "string"
                },
                "env"  : {
                    "type": "array",
                    "items": {
                        "type": "string"
                    }
                },
                "unsafe": {
                    "type": "boolean"
                },
                "image" : {
                    "type": "string"
                },
                "cluster"   : {
                    "type": "string"
                },
                "task_definition_revision"   : {
                    "type": "string"
                },
                "timeout"  : {
                    "type": "string"
                }
            },
            "additionalProperties": false
        },
        "ecs": {
            "id": "#/definitions/ecs",
            "type": "object",
            "properties": {
                "path": {
                    "type": "string"
                },
                "unsafe": {
                    "type": "boolean"
                },
                "image" : {
                    "type": "string"
                },
                "cluster"   : {
                    "type": "string"
                },
                "task_definition_revision"   : {
                    "type": "string"
                },
                "timeout"  : {
                    "type": "string"
                }
            },
            "additionalProperties": false
        },
        "serverless": {
            "id": "#/definitions/serverless",
            "type": "object",
            "properties": {
                "file": {
                    "type": "string"
                },
                "node_version": {
                    "type": "string"
                },
                "create_domain" : {
                    "type": "boolean"
                },
                "path"   : {
                    "type": "string"
                },
                "sls_node_module_cache_mount"   : {
                    "type": "string"
                },
                "env"  : {
                    "type": "array",
                    "items": {
                        "type": "string"
                    }
                }
            },
            "additionalProperties": false
        },
        "terraform": {
            "id": "#/definitions/terraform",
            "type": "object",
            "properties": {
                "version": {
                    "type": "string"
                },
                "state_bucket_region": {
                    "type": "string"
                },
                "state_bucket_name" : {
                    "type": "string"
                },
                "root_domain_name"   : {
                    "type": "string"
                },
                "aws_region"   : {
                    "type": "string"
                },
                "aws_profile"  : {
                    "type": "string"
                }
            },
            "additionalProperties": false
        }
    },
    "required": [
        "aws_profile",
        "aws_region",
        "env",
        "env_dir",
        "home",
        "infra_dir",
        "namespace",
        "prefer_runtime",
        "root_dir"
    ],
    "additionalProperties": false
}